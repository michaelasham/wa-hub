# Copy to .env
# Dashboard auth (optional - if not set, no password required)
DASHBOARD_PASSWORD=your-secure-password
DASHBOARD_SESSION_SECRET=random-32-char-string-for-signing

# Set to false when using HTTP (no TLS). Otherwise session cookie is secure-only and login fails over http://
# DASHBOARD_SECURE_COOKIES=false

# wa-hub API
WA_HUB_BASE_URL=http://localhost:3000
WA_HUB_TOKEN=your-api-key-here

# Dashboard webhook URL (what we register when creating instances)
DASHBOARD_WEBHOOK_PUBLIC_URL=http://localhost:3000/api/wahub/webhook

# Same-server fix: when wa-hub and dashboard run on same VM, set this to avoid 401
# Use http://localhost:DASHBOARD_PORT/api/wahub/webhook (e.g. http://localhost:3001/api/wahub/webhook)
DASHBOARD_WEBHOOK_INTERNAL_URL=

# Webhook signature verification (must match wa-hub WEBHOOK_SECRET)
WA_HUB_WEBHOOK_SIGNATURE_SECRET=

# (wa-hub side) Webhook 401 fixes - set in wa-hub .env:
# - Vercel Deployment Protection: WEBHOOK_PROTECTION_BYPASS=your-vercel-bypass-secret
# - Bearer auth: WEBHOOK_AUTH_TOKEN=token-your-app-expects (if receiver requires Authorization header)
# - Signature: WEBHOOK_SECRET must match WA_HUB_WEBHOOK_SIGNATURE_SECRET above

# Polling intervals
POLL_INTERVAL_MS=3000
QR_POLL_INTERVAL_MS=4000
QR_POLL_MAX_ATTEMPTS=30
