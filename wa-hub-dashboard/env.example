# Copy to .env
# Dashboard auth (optional - if not set, no password required)
DASHBOARD_PASSWORD=your-secure-password
DASHBOARD_SESSION_SECRET=random-32-char-string-for-signing

# wa-hub API
WA_HUB_BASE_URL=http://localhost:3000
WA_HUB_TOKEN=your-api-key-here

# Dashboard webhook URL (what we register when creating instances)
DASHBOARD_WEBHOOK_PUBLIC_URL=http://localhost:3000/api/wahub/webhook

# Webhook signature verification (must match wa-hub WEBHOOK_SECRET)
WA_HUB_WEBHOOK_SIGNATURE_SECRET=

# Polling intervals
POLL_INTERVAL_MS=3000
QR_POLL_INTERVAL_MS=4000
QR_POLL_MAX_ATTEMPTS=30
