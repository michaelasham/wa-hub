{
  "name": "wa-hub",
  "version": "1.0.0",
  "description": "Multi-tenant WhatsApp Web session manager using whatsapp-web.js",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "concurrently -n backend,dashboard -c blue,green \"npm run dev:backend\" \"npm run dev:dashboard\"",
    "dev:backend": "nodemon --watch src --ext js --delay 500 src/index.js",
    "dev:dashboard": "npm run dev --prefix wa-hub-dashboard",
    "dev:tunnel": "echo 'Optional: expose for QR scan. Run: npx cloudflared tunnel --url http://localhost:3000'",
    "test-webhook": "node scripts/test-webhook-server.js",
    "test-sentry": "node scripts/test-sentry.js",
    "launchpad:start": "node scripts/start-launchpad.js",
    "launchpad:stop": "node scripts/stop-launchpad.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "whatsapp",
    "web",
    "api",
    "multi-tenant"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/compute": "^4.0.0",
    "@google-cloud/storage": "^7.0.0",
    "@sentry/node": "^10.39.0",
    "archiver": "^5.3.0",
    "axios": "^1.13.2",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "nanoid": "^5.1.6",
    "pidusage": "^4.0.1",
    "qrcode": "^1.5.3",
"qrcode-terminal": "^0.12.0",
    "unzipper": "^0.10.11",
    "whatsapp-web.js": "^1.34.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "nodemon": "^3.1.0"
  }
}
