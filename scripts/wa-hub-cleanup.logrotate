/var/log/wa-hub-cleanup.log {
    daily
    rotate 30
    compress
    delaycompress
    missingok
    notifempty
    create 0644 root root
    sharedscripts
    postrotate
        # Reload systemd journal if needed
        systemctl reload wa-hub-cleanup.service > /dev/null 2>&1 || true
    endscript
}
